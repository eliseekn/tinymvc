{% extends "layouts/admin.html.twig" %}

{% block title %}
	{{ __('details') ~ ' | Administration' }}
{% endblock %}

{% block body %}
    <div class="card shadow-sm">
        <div class="card-header">{{ __('details') }}</div>

        <div class="card-body">
            <div class="form-group row">
                <p class="col-sm-2 col-form-label">ID</p>
                <div class="col-form-label col-sm-10 font-weight-bold">{{ data.id }}</div>
            </div>

            <div class="form-group row">
                <p class="col-sm-2 col-form-label">{{ __('name') }}</p>
                <div class="col-form-label col-sm-10 font-weight-bold">{{ data.name }}</div>
            </div>

            <div class="form-group row">
                <p class="col-sm-2 col-form-label">{{ __('email') }}</p>
                <div class="col-form-label col-sm-10 font-weight-bold">{{ data.email }}</div>
            </div>

            <div class="form-group row">
                <p class="col-sm-2 col-form-label">{{ __('phone') }}</p>
                <div class="col-form-label col-sm-10 font-weight-bold">{{ data.phone }}</div>
            </div>

            <div class="form-group row">
                <p class="col-sm-2 col-form-label">{{ __('address') }}</p>
                <div class="col-form-label col-sm-10 font-weight-bold">{{ data.address }}</div>
            </div>

            <div class="form-group row">
                <p class="col-sm-2 col-form-label">{{ __('company') }}</p>
                <div class="col-form-label col-sm-10 font-weight-bold">{{ data.company }}</div>
            </div>

            <div class="form-group row">
                <p class="col-sm-2 col-form-label">{{ __('created_at') }}</p>
                <div class="col-form-label col-sm-10 font-weight-bold">
                    {{ date_helper(data.created_at) }}
                </div>
            </div>

            <div class="form-group row">
                <p class="col-sm-2 col-form-label">{{ __('updated_at') }}</p>
                <div class="col-form-label col-sm-10 font-weight-bold">
                    {{ data.updated_at != data.created_at ? date_helper(data.updated_at) : '-' }}
                </div>
            </div>

            <div class="form-group row">
                <p class="col-form-label col-sm-2">{{ __('role') }}</p>
                <div class="col-form-label col-sm-10 font-weight-bold">{{ data.role }}</div>
            </div>

            <div class="form-group row">
                <p class="col-form-label col-sm-2">{{ __('status') }}</p>

                <div class="col-form-label col-sm-10 font-weight-bold">
                    {% if data.active %}
                    <span class="badge badge-success">{{ __('active') }}</span>
                    {% else %}
                    <span class="badge badge-danger">{{ __('inactive') }}</span>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="card-footer">
            <a href="{{ route('users.edit', data.id) }}" class="btn btn-outline-dark">
                {{ __('edit') }}
            </a>

            <a href="{{ route('users.new') }}" class="btn btn-outline-dark mx-2">
                {{ __('new') }}
            </a>
            
            <delete-item action="{{ route('users.delete', data.id) }}">
                <a class="btn btn-danger">{{ __('delete') }}</a>
            </delete-item>

            <a href="{{ route('users.index') }}" class="btn btn-outline-dark ml-2">
                {{ __('back') }}
            </a>
        </div>
    </div>
{% endblock %}